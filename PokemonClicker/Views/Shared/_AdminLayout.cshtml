@using Org.BouncyCastle.Asn1.Ocsp
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/admin/css/core.css">
    <link rel="stylesheet" href="~/admin/css/theme-default.css">
    <script src="~/admin/js/helpers.js"></script>
    <script src="~/admin/js/config.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js@1.12.0/src/toastify.min.css">
    <script src="https://kit.fontawesome.com/e0462e4fee.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>

<div class="layout-wrapper layout-content-navbar">
  <div class="layout-container">
  <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
  <div class="app-brand demo">
    <a href="#" class="app-brand-link my-2">
      <span class="app-brand-text demo menu-text fw-bolder ms-2">PokeClicker</span>
    </a>
  </div>

  <hr>
  
  <ul class="menu-inner py-1">
    
    <li class="menu-item">
      <a href="@Url.Action("Game", "Home")" class="menu-link">
        <i class="menu-icon fa-solid fa-gamepad"></i>
        <div data-i18n="Analytics">Game</div>
      </a>
    </li>

    <li class="menu-item @(Url.Action("index", "Admin") == Context.Request.Path ? "active" : "")">
      <a href="@Url.Action("index", "Admin")" class="menu-link">
        <i class="menu-icon fa-solid fa-gauge"></i>
        <div data-i18n="Analytics">Dashboard</div>
      </a>
    </li>

    <li class="menu-item @(Url.Action("Pokeballs", "Admin") == Context.Request.Path ? "active" : "")">
      <a href="@Url.Action("Pokeballs", "Admin")" class="menu-link">
        <i class="menu-icon fa-solid fa-circle-dot"></i>
        <div data-i18n="Analytics">Pokeballs</div>
      </a>
    </li>

    <li class="menu-item @(Url.Action("Users", "Admin") == Context.Request.Path ? "active" : "")">
      <a href="@Url.Action("Users", "Admin")" class="menu-link">
        <i class="menu-icon fa-solid fa-user"></i>
        <div data-i18n="Analytics">Users</div>
      </a>
    </li>

  </ul>
  </aside>
  <div class="layout-page">
    
    <div class="content-wrapper">

      <div class="container-xxl flex-grow-1 container-p-y">
        <div class="row">
          @RenderBody()
        </div>

      </div>

      <div class="content-backdrop fade"></div>
    </div>
    <!-- Content wrapper -->
  </div>
<!-- / Layout page -->
</div>

<!-- Overlay -->
<div class="layout-overlay layout-menu-toggle"></div>
</div>

<script src="~/admin/js/popper.js"></script>
<script src="~/admin/js/jquery.js"></script>
<script src="~/admin/js/bootstrap.js"></script>
<script src="~/admin/js/menu.js"></script>
<script src="https://cdn.jsdelivr.net/npm/toastify-js@1.12.0/src/toastify.min.js"></script>

@if (ViewData["success"] != null)
{
    <script>
        Toastify({
            text: "@ViewData["success"]",
            duration: 3000,
            style: {
                background: "linear-gradient(to right, #00b09b, #96c93d)",
              }
        }).showToast();
    </script>
}

@if (ViewData["error"] != null)
{
    <script>
        Toastify({
            text: "@ViewData["error"]",
            duration: 3000,
            style: {
                background: "linear-gradient(to right, #D0321D, #A91B0D)",
              }
        }).showToast();
    </script>
}

<script>
  const confirmForms = document.querySelectorAll(".confirmForm");
  
  confirmForms.forEach((form) => {
      form.addEventListener("submit", (e) => {
        e.preventDefault();
        Swal.fire({
          title: "Are you sure you want to delete this?",
          icon: "warning",
          showCancelButton: true,
          confirmButtonText: "Yes",
          cancelButtonText: "No"
        }).then((result) => {
          if (result.isConfirmed)
          {
            form.submit();
          }
        })  
      })
  })
</script>

</body>
</html>